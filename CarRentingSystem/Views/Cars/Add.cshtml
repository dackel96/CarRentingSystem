@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<div class="row">
    <div class="col-lg-8 col-sm-12 offset-lg-2 offset-xl-3 col-xl-6">
        <h2 class="heading-margins text-center">Add Car</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="VW,BMW,LEXUS,etc...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Golf,M5,IS200,etc...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="This is great car for offroad vacantion..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Place URL here"> 
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div>
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
                    @foreach(var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <hr /> 
            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>