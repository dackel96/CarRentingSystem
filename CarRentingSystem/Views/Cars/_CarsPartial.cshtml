@model IEnumerable<CarServiceModel>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="card mb-3 m-3" style="width: 18rem;">
            <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model - @car.Year">
            <div class="card-body">
                <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                <p class="card-text">@car.Description</p>
                <div class="text-center">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View</a>
                    @if (ViewBag.AllowCarEdit == true)
                    {
                        <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>